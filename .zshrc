# Set personal aliases, overriding those provided by oh-my-zsh libs,
# plugins, and themes. Aliases can be placed here, though oh-my-zsh
# users are encouraged to define aliases within the ZSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
alias zshconfig="vim ~/.zshrc"
alias ohmyzsh="vim ~/.oh-my-zsh"
alias d=docker
alias g=git
alias gs="git status"


# create a stable branch, it defaults to "stable" if you don't provide a branch name
alias co-stable='(){git fetch && git checkout $(git describe origin/master --abbrev=0 --match "version_*") -b ${1:-stable} ;}'
# rebase on latest stable master version. Please note, that this only works for master, not for release branches. 
alias rb-stable='git fetch && git rebase $(git describe origin/master --abbrev=0 --match "version_*")'
# filter branches 
alias gf='(){git branch | grep $1 ;}'
alias gfa='(){git branch -a | grep $1 ;}'

# Show hidden folders and files, but not the dots
setopt globdots
zstyle ':completion:*' special-dirs false


# Clear duplicates from PATH
if [ -n "$PATH" ]; then
  old_PATH=$PATH:; PATH=
  while [ -n "$old_PATH" ]; do
    x=${old_PATH%%:*}       # the first remaining entry
    case $PATH: in
      *:"$x":*) ;;          # already there
      *) PATH=$PATH:$x;;    # not there yet
    esac
    old_PATH=${old_PATH#*:}
  done
  PATH=${PATH#:}
  unset old_PATH x
fi


# measure zsh start time
timezsh() {
  shell=${1-$SHELL}
  for i in $(seq 1 10); do /usr/bin/time $shell -i -c exit; done
}

